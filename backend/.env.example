# FastAPI配置
APP_NAME=Literature Review System
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=5555

# 数据库配置
DATABASE_URL=sqlite:///./literature.db
# 生产环境使用PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/literature

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379/0

# LLM / OpenAI 兼容API配置（完全由用户在 .env 中自定义）
# 必填：API Key
OPENAI_API_KEY=your-openai-or-compatible-api-key

# 必填：Base URL
# 常见示例：
# 官方 OpenAI: https://api.openai.com/v1
# 第三方转发: https://api.sijinworld.com/v1
# Anthropic 兼容: https://api.anthropic.com/v1
# 本地 Ollama: http://localhost:11434/v1
OPENAI_BASE_URL=https://api.sijinworld.com/v1

# 必填：默认调用的模型名称
# 例如：
# - gpt-4
# - gpt-4.1-mini
# - gpt-4o
# - gpt-4o-mini
# - gpt-3.5-turbo
# - qwen-turbo
# - llama-3-70b
OPENAI_MODEL=

# 爬虫配置
CRAWLER_DELAY_MIN=1
CRAWLER_DELAY_MAX=3
CRAWLER_MAX_RETRIES=3
CRAWLER_TIMEOUT=30

# 外部文献数据源配置（占位，可使用虚拟 KEY 测试）
# SerpAPI Scholar（Google Scholar 代理）
SERPAPI_API_KEY=TEST_SERPAPI_KEY
SERPAPI_SCHOLAR_ENABLED=false
SERPAPI_SCHOLAR_ENGINE=google_scholar

# Scopus 低等级 API
SCOPUS_ENABLED=false
SCOPUS_API_KEY=TEST_SCOPUS_KEY
SCOPUS_API_BASE_URL=https://api.elsevier.com/content/search/scopus

# 文件存储
PAPERS_DIR=../data/papers
EXPORTS_DIR=../data/exports

# CORS配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# JWT密钥（可选，用于认证）
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30